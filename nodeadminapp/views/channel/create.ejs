    <!--우측 콘텐츠 영역 -->
    <div class="wrapper wrapper-content">
        <form action="/channel/create" method="post">
            <div class="ibox-content m-b-sm border-bottom">
                <!-- 첫번째 row -->
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">채널분류</label>
                            <select name="catrgory_code" class="form-control">
                                <option value="0">오픈채널</option>
                                <option value="1">개인채널</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">채널명</label>
                            <input type="text" name="channel_name" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">비밀번호</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                    </div>
                </div>
                <!-- 두번째 row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">채널간략소개</label>
                            <textarea name="user_limite" id="user_limite" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>
                </div>

                <!-- 세번째 row -->
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label">사진업로드</label>
                            <input type="file" name="file" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label" for="OrderNo">오픈상태</label>
                            <select name="catrgory_code" class="form-control">
                                <option value="0">일시중지</option>
                                <option value="1" selected>오픈</option>
                                <option value="1">삭제</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label">등록자</label>
                            <input type="text" class="form-control" name="reg_member_id" value="robin" readonly>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label">등록일시</label>
                            <input type="text" class="form-control" value="2023-12-25" readonly>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a href="/member/list" class="btn btn-info">목록</a>
                </div>
            </div>
        </form>
    </div>

